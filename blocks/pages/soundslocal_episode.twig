                                    <li>{{item.band_social|raw}}</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </article>
            <div class="location-block">
                <div class="container">
                    <h2>Locations Visited in Episode:</h2>
                    <div class="map-holder">
                        {{item.my_map|raw}}
                    </div>
                </div>
            </div>
            <section class="recent-block">
                <div class="container">
                    <div class="img-holder">
                        <img src="{{item.bottom_image}}" alt="{{item.band_name}}">
