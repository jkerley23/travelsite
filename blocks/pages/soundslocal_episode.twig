                        {% else %}
                    {% endif %}
                    </ul>
                </div>


                {% else %}

            {% endif %}

            {% else %}

            <div class="img-holder">
                    <img src="{{ asset('images/ComingSoon.jpg') }}" alt="Sounds Local">
                </br>
                </br>
                </div>

        {% endif %}

            </section>

