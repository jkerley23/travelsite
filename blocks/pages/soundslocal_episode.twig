      <!-- meta tags -->
    {% for item in episode %}
    {% set item = item.instance %}
      <meta name="title" content="Sounds Local - {{item.band_name}} " />
      <meta name="description" content="{{item.episode_description|raw}}"/>
      <meta name="keywords" content="local,travel,music"/>
      <meta name="H1" content="Web Series"/>
      <!-- fb opengraph tags -->
      <meta property="og:title" content="Sounds Local - {{item.band_name}}"/>
      <meta property="og:type" content="website"/>
      <meta property="og:url" content="/soundslocal/episode/{{item.slug}}"/>
      <meta property="og:image" content="{{resize.resize(item.bottom_image, 537, 304)}}" />
      <meta property="og:description" content="{{item.episode_description|raw}}" />
  {% endfor %}
