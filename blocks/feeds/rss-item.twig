{% for post in posts %}
{% spaceless %}
	{# Build list of categories and dedup results #}
	{% set cats = [] %}
	{% if post.categories is not empty %}
		{% for cat in post.categories %}
		{% set cats = cats|merge({(cat.name|lower):[]})%}
		{% endfor %}
	{% endif %}
	{% if post.tags is not empty %}
		{% for cat in post.tags %}
			{% set cats = cats|merge({(cat|lower):[]})%}
		{% endfor %}
	{% endif %}

	{% set allowedTags = '<strong><br><em><u><s><ol><li><ul><blockquote><p><a><img><table><tbody><tr><td><pre><code>' %}
{% endspaceless %}
<item>
	<title>{{ post.title|striptags }}</title>
	<image>{{ post.images.featured }}</image>
	<link>http://{{ post.url }}</link>
	<guid isPermaLink="false">http://{{ post.url }}</guid>
	<description>
		{{ post.contents|striptags|truncate(250) }}
	</description>
	{% if cats is not empty %}
		{% set cats = cats|keys %}
		{% for item in cats|sort %}
		    <category>{{ item }}</category>
		{% endfor %}
	{% endif %}
	<content:encoded>
		<![CDATA[{{ post.contents|striptags(allowedTags)|raw }}]]>
	</content:encoded>
	<dc:creator>{{ post.contributor.byline|striptags }}</dc:creator>
	<pubDate>{{ post.published|date("D, d M Y H:i:s O") }}</pubDate>
	<dc:identifier>{{ post.site_id }}|{{ post.id }}</dc:identifier>
</item>
{% endfor %}